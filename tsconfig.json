{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": "src",
    // optional - in general it's a good practice to decouple declaration files from your actual transpiled JavaScript files
    "declarationDir": "dist/dts",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
